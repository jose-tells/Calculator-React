@import '../mixins.styl';

.container
  width 300px
  height 150px
  display flex
  flex-direction column
  margin 10px
  .container__title
    align-self flex-start
    transform translate(15px, 0)
    font-weight 400
    font-size textFontSize + 0.2rem
    color letter
  .container__box
    display flex
    align-items center
    justify-content center
    width 100%
    height 133px
    margin auto
    border-radius 25px
    background icon-blue

.container.isLeft
  animation-name left-transition
  animation-duration 0.4s

.container__animation
  display flex
  max-width 225px
  overflow hidden

.container__animation--response
  display flex
  align-items center
  width 225px
  height 40px
  align-self center
  justify-self center
  min-width 225px
  background elegant-black
  border-radius 20px
  transition 0.5s
  p
    padding-left 14px
    color letter
    font-size textFontSize
    font-weight 200


.container__animation--response.isResponse
  transform translateX(-200%)

leftAnimation()