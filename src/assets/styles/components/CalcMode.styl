@import '../vars.styl'

.calcMode__container
  width 100%
  height 90px
  display flex
  flex-direction column
  align-items center
  margin 20px auto 0 auto

.calcModeForm
  display flex
  width 130px
  height 33px
  background letter
  border-radius 12px

.calcModeForm__input
  width 83%
  background transparent
  padding 4px 11px
  border 0
  outline 0
  font-family main-font
  font-size textFontSize - 0.2rem
  font-weight 400

.calcModeForm__input--icon
  align-self center
  font-size 2rem
  color button-blue
  transition 0.5s

.calcModeForm__input--icon.calcIsOpen
  transform rotateZ(-90deg)

.calcModeForm__listBox
  display absolute
  width 130px
  height 0px
  margin-top 2px
  border-radius 12px
  background letter
  transition 0.5s
  overflow hidden
  ul
    height 70%
    margin 4px 11px
    list-style none
    li
      display block
      font-size textFontSize - 0.2rem
      font-weight 400
      color elegant-black

.calcModeForm__listBox.calcIsOpen
  height 55px
  z-index 100