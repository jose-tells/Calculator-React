.form
  display flex
  flex-direction column

.home__form
  width 225px
  height 40px
  display flex
  align-items center
  overflow hidden
  border-radius 42px
  background elegant-black
  transition 0.5s
  .home__form--icon
    font-size 2rem

.home__form.isHome
  background icon-blue

.home__form.isAnimated
  transform translateX(-100%)

.home__form.isResponse
  transform translateX(-200%)

.home__form--input
  width 75%
  padding-left 19px
  background transparent
  border 0
  font-family main-font
  font-size textFontSize - 0.2rem
  font-weight 200
  color letter
  outline none

.home__form--input::placeholder
  color letter
  opacity 0.5

.home__form--icon
  margin-left 25px
  justify-self flex-end
  align-self center
  color button-blue
  transition 0.5s

.home__form--icon.isOpen
  transform rotateZ(-90deg)

